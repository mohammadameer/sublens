#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  # Wait for DATABASE_URL to be available (Railway sets this)
  if [ -z "$DATABASE_URL" ]; then
    echo "Warning: DATABASE_URL is not set. Skipping db:prepare."
    echo "Make sure DATABASE_URL is set to \${{Postgres.DATABASE_PUBLIC_URL}} in Railway."
  else
    ./bin/rails db:prepare
  fi
fi

exec "${@}"
